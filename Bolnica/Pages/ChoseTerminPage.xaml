<Page x:Class="Bolnica.Pages.ChoseTerminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
      xmlns:local="clr-namespace:Bolnica.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="730" d:DesignWidth="950"
      Title="ChoseTerminPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="0.5*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="4*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Viewbox Stretch="UniformToFill">
            <Calendar
            SelectedDatesChanged="Calendar_OnSelectedDatesChanged"
            Grid.Column="0"
            Grid.Row="0"
            Name="MonthlyCalendar" 
            SelectionMode="MultipleRange"  
            DisplayDate="6/6/2020"
            DisplayDateStart="{x:Static sys:DateTime.Today}"
            FirstDayOfWeek="Monday"
            IsTodayHighlighted="True" 
            xmlns:sys="clr-namespace:System;assembly=mscorlib" Margin="15,39,88,19" Width="229">
            </Calendar>
        </Viewbox>
        <DockPanel Grid.Column="1" Grid.Row="0">
            <TextBlock DockPanel.Dock="Top" FontSize="22" TextAlignment="Center">Odaberi vreme</TextBlock>
            <Border VerticalAlignment="Stretch" BorderThickness="1" BorderBrush="Black">
                <ScrollViewer VerticalAlignment="Stretch">
                    <ListBox FontSize="18" ItemsSource="{Binding Path=TimesList, UpdateSourceTrigger=PropertyChanged}" SelectedValue="{Binding Path=PickedTime, UpdateSourceTrigger=PropertyChanged}">
                    </ListBox>
                </ScrollViewer>
            </Border>
        </DockPanel>
        <Grid Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1.3*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>
            <Button FontSize="20" Width="120" Click="GoBack_Handler" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Left" Height="45" Margin="50,0">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="6"/>
                    </Style>
                </Button.Resources> Nazad</Button>
            <Button FontSize="20" Width="120" Click="Continue_Handler" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Right" Height="45" Margin="50,0" IsEnabled="{Binding Path=IsEnabledButton, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="6"/>
                    </Style>
                </Button.Resources> Nastavi</Button>
        </Grid>
    </Grid>
</Page>
