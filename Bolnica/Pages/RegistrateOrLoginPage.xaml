<Page x:Class="Bolnica.Pages.RegistrateOrLoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Bolnica.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="730" d:DesignWidth="950"
      Title="RegistrateOrLoginPage">

    <StackPanel Orientation="Vertical">
        <TextBlock Margin="10, 105, 10, 55" FontSize="25" TextAlignment="Center" ToolTip="Klikni na jednu od ponuđenih opcija">Izaberi</TextBlock>
        <Button Click="Login_Handler" FontSize="18" Width="292" Height="52" Margin="10, 50, 10, 20" ToolTip="Uloguj se na svoj profil" Cursor="Hand">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="6"/>
                </Style>
            </Button.Resources> Prijavi se</Button>
        <Button Click="Registrate_Handler" FontSize="18" Width="292" Height="52" Margin="20" ToolTip="Kreiraj korisnički nalog" Cursor="Hand">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="6"/>
                </Style>
            </Button.Resources> Registruj se</Button>
        
    </StackPanel>
</Page>
